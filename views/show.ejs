<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= filename %> | Finder...</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              primary: {
                50: '#f0f9ff',
                100: '#e0f2fe',
                500: '#3b82f6',
                600: '#2563eb',
              },
            },
          }
        }
      }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
      html {
        transition: background-color 0.3s ease, color 0.3s ease;
      }
      body {
        min-height: 100vh;
        transition: background-color 0.3s ease, color 0.3s ease;
      }
      .pdf-container {
        width: 100%;
        height: 80vh;
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        overflow: hidden;
      }
      .image-container {
        max-width: 100%;
        max-height: 70vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        border-radius: 0.5rem;
        overflow: hidden;
        background-color: #f3f4f6;
      }
      .dark .pdf-container {
        border-color: #374151;
      }
      .dark .image-container {
        background-color: #1f2937;
      }
    </style>
</head>
<body class="bg-white dark:bg-zinc-900 text-zinc-900 dark:text-white">

  <div class="container mx-auto p-4 md:p-10">
    <div class="flex justify-between items-center mb-6">
      <a href="/" class="text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 inline-flex items-center group transition-colors">
        <i class="fas fa-arrow-left mr-2 group-hover:-translate-x-1 transition-transform"></i>
        Go Back To Home
      </a>
      
      <button id="theme-toggle" class="p-2 rounded-full hover:bg-zinc-100 dark:hover:bg-zinc-700 transition-colors">
        <svg id="theme-icon-dark" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-800 dark:text-zinc-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <svg id="theme-icon-light" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-800 dark:text-zinc-200 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </button>
    </div>
    
    <div class="bg-zinc-100 dark:bg-zinc-800 rounded-lg shadow-xl overflow-hidden transition-all duration-300">
      <div class="p-6">
        <h1 class="text-2xl md:text-3xl font-bold mb-4 text-blue-500 dark:text-blue-400">
          <%= filename %>
        </h1>
        
        <% if (isPdf) { %>
          <!-- PDF Viewer -->
          <div class="pdf-container">
            <embed 
              src="/files/<%= filename %>" 
              type="application/pdf" 
              width="100%" 
              height="100%"
              class="bg-white dark:bg-zinc-800"
            >
          </div>
          <div class="mt-4 text-sm text-zinc-500 dark:text-zinc-400">
            <p>This is a PDF document. If it doesn't display properly, you can <a href="/files/<%= filename %>" class="text-blue-600 dark:text-blue-400 hover:underline" download>download it</a> instead.</p>
          </div>
        <% } else if (isImage) { %>
          <!-- Image Viewer -->
          <div class="image-container">
            <img src="/files/<%= filename %>" alt="<%= filename %>" class="max-w-full max-h-full object-contain">
          </div>
          <div class="mt-4 text-sm text-zinc-500 dark:text-zinc-400">
            <p>This is an image file. You can <a href="/files/<%= filename %>" class="text-blue-600 dark:text-blue-400 hover:underline" download>download it</a> if needed.</p>
          </div>
        <% } else { %>
          <!-- Regular text/markdown content -->
          <div class="prose dark:prose-invert max-w-none">
            <%- marked.parse(filedata) %>
          </div>
        <% } %>
        
        <div class="mt-6 pt-4 border-t border-zinc-200 dark:border-zinc-700 flex justify-end">
          <a href="/edit/<%= filename %>" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-md transition-colors text-white">
            <i class="fas fa-edit mr-2"></i> Edit File
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Theme Toggle Functionality
    const themeToggle = document.getElementById('theme-toggle');
    const themeIconDark = document.getElementById('theme-icon-dark');
    const themeIconLight = document.getElementById('theme-icon-light');
    
    const savedTheme = localStorage.getItem('theme') || 
                      (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    
    if (savedTheme === 'dark') {
      document.documentElement.classList.add('dark');
      themeIconDark.classList.add('hidden');
      themeIconLight.classList.remove('hidden');
    } else {
      document.documentElement.classList.remove('dark');
      themeIconDark.classList.remove('hidden');
      themeIconLight.classList.add('hidden');
    }
    
    themeToggle.addEventListener('click', () => {
      if (document.documentElement.classList.contains('dark')) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
        themeIconDark.classList.remove('hidden');
        themeIconLight.classList.add('hidden');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
        themeIconDark.classList.add('hidden');
        themeIconLight.classList.remove('hidden');
      }
    });
  </script>
</body>
</html>